  <script>
    function play(sound) {
      // Format officiel Tesla Boombox (testé novembre 2025)
      window.location = `tesla://boombox?sound=${sound}`;
    }
    function stop() {
      window.location = "tesla://boombox?stop=1";
    }

    // Bonus : plein écran auto sur Tesla
    document.documentElement.requestFullscreen?.();
  </script>
